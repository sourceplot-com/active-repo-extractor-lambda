{
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",

        "outDir": "./dist",
        "rootDir": "./src",

        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "node16",

        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}
